package br.com.castgroup.cursos.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import br.com.castgroup.cursos.dtos.LogDTO;

@Repository
public interface LogRepositoryDTO extends JpaRepository<List<LogDTO>, Integer> {
	
	@Query("SELECT u,l,c from Log l join Usuario u on u.idUsuario = l.usuario.idUsuario"
			+ " join Curso c on c.id_curso = l.curso.id_curso")	
	List<LogDTO> listarLogs();
	

}
